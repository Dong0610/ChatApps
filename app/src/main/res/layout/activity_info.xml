<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".usermain.InfoActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgback"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/background_icon"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/ic_back"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/layoutImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginTop="-35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgprofile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/back_image"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="15dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:textColor="#D500F9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutImage" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:textColor="#3D5AFE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtname" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/updateinfo"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:textSize="@dimen/_12sdp"
        android:textColor="#D500F9"
        android:text="@string/s_a_th_ng_tin"
        android:textStyle="bold"
        app:backgroundTint="#F3FFFC"
        app:background="@drawable/inputtext_bg"
        app:cornerRadius="@dimen/_35sdp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:id="@+id/daviet"
        android:textSize="@dimen/_12sdp"
        android:textColor="#D500F9"
        android:text="@string/b_i_vi_t"
        android:textStyle="bold"
        app:backgroundTint="#F3FFFC"
        app:background="@drawable/inputtext_bg"
        app:cornerRadius="@dimen/_35sdp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:id="@+id/signout"
        android:textSize="@dimen/_12sdp"
        android:textColor="#D500F9"
        android:text="Đăng xuất"
        android:textStyle="bold"
        app:backgroundTint="#F3FFFC"
        app:background="@drawable/inputtext_bg"
        app:cornerRadius="@dimen/_35sdp"
        />
</LinearLayout>

